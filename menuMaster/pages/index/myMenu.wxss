/* pages/index/myMenu.wxss */

.my-menu-item{
  display: flex;
  padding: 15rpx 20rpx;
}
.my-menu-img{
  width: 150rpx;
  height: 150rpx;
  background: #747474;
}
.my-menu-txt{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.my-menu-name{
  font-size: 30rpx;
}
.my-menu-price{
  font-size: 25rpx;
  color: red;
}
.my-menu-number{
  width: 138rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.my-menu-operate-reduce,.my-menu-operate-add{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  line-height: 38rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #e4dfdf;
}
.my-menu-operate-add{
  background: orange;
  border: none;
}
.my-menu-price text:first-child{
  font-size: 20rpx;
}
.my-menu-txt{
  margin-left: 20rpx;
}
.my-menu-weight{
  font-size: 20rpx;
  color: rgb(46, 45, 45);
  background: #eeebeb;
  border-radius: 8rpx;
  width: fit-content;
  padding: 3rpx 8rpx;
}
.my-menu-total{
  text-align: right;
  border-top: 1rpx solid #e4dfdf;
  padding: 20rpx 20rpx 0 0;
  margin: 50rpx 20rpx 0 20rpx
}